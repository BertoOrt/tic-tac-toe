extends layout

block content
  h1 Tic Tac Toe!
  |Two Player
  input(type="radio", id="TwoPlayer", name="gameOption", checked)
  |Computer
  input(type="radio", id="computer", name="gameOption")
  .label
    .turn
      span Turn: 
    .player
      span#player player 1
  .game
    .cell#one
    .cell#two
    .cell#three
    .cell#four
    .cell#five
    .cell#six
    .cell#seven
    .cell#eight
    .cell#nine
  script(src='javascripts/computer.js')
  script(src='javascripts/TwoPlayer.js')
